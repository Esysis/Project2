<!-- main page of the website, need to be logged in to see -->
{{!-- weather section --}}
<main class="py-8 px-4 md:px-12 lg:px-24 xl:px-48 bg-gray-100">
  <div class="mb-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold">ALL STAR NEWS</h1>
      {{#if user}}
      <p class="mt-2">Welcome {{user.name}}</p>
      {{else}}
      <p class="mt-2">Welcome Unknown Stranger</p>
      {{/if}}
    </div>
  </div>

  <div class="mb-8">
    <div class="flex items-center justify-center">
      <input type="search" id="search-input" placeholder="Enter City" class="w-64 p-2 border border-gray-400 rounded-l-md focus:outline-none focus:border-blue-500 ">
      <button type="button" id="search-button" class="px-4 py-2 bg-blue-500 text-white rounded-r-md hover:bg-blue-600 focus:outline-none">Search</button>
    </div>
  </div>

  <div class="mb-8">
    <div class="flex items-center space-x-4 weather-info">
      <span class="font-bold location">Location:</span>
      <span class="font-semibold temperature">Temperature:</span>
      <span class="font-semibold condition">Condition:</span>
    </div>
  </div>
{{!-- user count --}}
<br>


