<div class="flex flex-wrap -mx-4">
  <div class="w-full md:w-1/2 px-4 mb-4 md:mb-0">
    <h2 class="text-2xl font-bold">Login</h2>

    <form class="form login-form">
      <div class="mb-4">
        <label for="email-login" class="block font-semibold">Email:</label>
        <input class="form-input w-full border px-4 py-2 rounded-md focus:outline-none focus:border-blue-500" type="text" id="email-login" />
      </div>
      <div class="mb-4">
        <label for="password-login" class="block font-semibold">Password:</label>
        <input class="form-input w-full border px-4 py-2 rounded-md focus:outline-none focus:border-blue-500" type="password" id="password-login" />
      </div>
      <div>
        <button class="btn btn-primary px-4 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none" type="submit">Login</button>
      </div>
    </form>
  </div>

  <div class="w-full md:w-1/2 px-4">
    <h2 class="text-2xl font-bold">Signup</h2>

    <form class="form signup-form">
      <div class="mb-4">
        <label for="name-signup" class="block font-semibold">Name:</label>
        <input class="form-input w-full border px-4 py-2 rounded-md focus:outline-none focus:border-blue-500" type="text" id="name-signup" />
      </div>
      <div class="mb-4">
        <label for="email-signup" class="block font-semibold">Email:</label>
        <input class="form-input w-full border px-4 py-2 rounded-md focus:outline-none focus:border-blue-500" type="text" id="email-signup" />
      </div>
      <div class="mb-4">
        <label for="password-signup" class="block font-semibold">Password:</label>
        <input class="form-input w-full border px-4 py-2 rounded-md focus:outline-none focus:border-blue-500" type="password" id="password-signup" />
      </div>
      <div>
        <button class="btn btn-primary px-4 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="../public/js/login.js"></script>
